<!DOCTYPE html>
<html lang="en">

  <head>
    <title>Log In</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="/login.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  </head>

  <body>

    <div class="form">
      <form>
        <h3>Email ID :</h3>
        <input id="email" type="text" placeholder="Email Id"><br>
        <h3>Password :</h3>
        <input id="pass" type="password" placeholder="Password"><br><br>
        <br>

      </form>
      <div class="checkbox">
        <input type="checkbox"><b>Remember Me</b>
      </div><br><br>
      <div class="botton">
        <input type="button" value="Forget Password?"> <input id='login-btn' type="button" value="Login" style="margin-left:10px">
      </div>
    </div>

    <script>
      $("#login-btn").click(function() {
        user = {
          email: $("#email").val(),
          password: $("pass").val()
        };

        $.ajax({
          method: 'POST',
          url: "/auth/signin",
          data: user
        }).done(function(response) {
          console.log(response);
          window.location.replace('/profile.html');
        }).fail(function(response) {
          console.log(response);
          $("#error").text("Something went wrong! Try again.");
        });
      });

    </script>

  </body>

</html>
