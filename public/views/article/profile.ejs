             <div class="col-md-4">      
 <img class="img" src=<%=request.profile.photo%>>
          </div>
 </div>
 </div>
 
  
    <div class="form">
      <form>
      <div class="holder">
         <h3> Place Name :</h3>
        <input id="place" type="text" placeholder="place"><br>
        <h3>Image :</h3>
        <input id="photo" type="text" placeholder="image url* "><br>
       <h3>Description :</h3>
        <input id="description" type="text" placeholder="description"><br><br>
        <br>
  </div>
      </form>
<div>
   <div class="form-group"><div class="col-sm-offset-2 col-sm-10">
      <button id="submit" type="submit" class="btn btn-default">Submit</button>
      <div id="error"></div>
    </div>
  </div>

<script>

    var signup={
      place:"",
      description:"", 
      photo:"" ,
    };
           $("#place").change(function()
            {
               
           signup.place= $("#place").val();
            });      
    $('#description').change(function(){
    signup.description = $("#description").val();
  })  ;
        $("#photo").change(function()
            {
             signup.photo= $("#photo").val();
            });         
 
      $('#submit').click(function(){
    
    $.ajax({
      method:"POST",
      url:'/api/posts',
      data: signup
    }).done(function(response){
      console.log(response);
      window.location.replace("/posts/all");
    }).fail(function(response){
                   console.log(response); 
        $("#error").text("Something went wrong! Try again.");
                });
                
            });
  </script>       

